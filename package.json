{
  "name": "@ydesign/core",
  "version": "1.0.0",
  "description": "A simple react components library including responsive and translation features",
  "scripts": {
    "format-check": "prettier --check --parser typescript '**/*.{ts,tsx}'",
    "format-fix": "prettier --write --parser typescript '**/*.{ts,tsx}'",
    "lint": "eslint ./src --ext .ts,.tsx",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build": "rollup --config",
    "build-icons": "cd src && go run gen-icons-types.go && cd .. && npx @svgr/cli --out-dir ./src/assets/iconsComponents --typescript --filename-case kebab ./src/assets/svgs",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": ["pnpm format-fix", "pnpm lint"]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@emotion/css": "^11.11.2",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@storybook/addon-essentials": "7.6.3",
    "@storybook/addon-interactions": "7.6.3",
    "@storybook/addon-links": "7.6.3",
    "@storybook/addon-onboarding": "1.0.8",
    "@storybook/blocks": "7.6.3",
    "@storybook/jest": "^0.2.3",
    "@storybook/react": "7.6.3",
    "@storybook/react-vite": "7.6.3",
    "@storybook/testing-library": "0.2.2",
    "@svgr/cli": "^8.1.0",
    "@types/node": "^20.10.2",
    "@types/react": "^18.2.28",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.15",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "18.2.0",
    "rollup": "^4.0.2",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "storybook": "7.6.3",
    "tslib": "^1.10.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "18.2.0"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "types": "dist/types/index.d.ts",
  "type": "module",
  "dependencies": {
    "@storybook/addon-actions": "^7.6.4",
    "@storybook/addon-themes": "7.6.3",
    "@storybook/addons": "7.6.3",
    "@storybook/manager-api": "7.6.3",
    "@storybook/theming": "7.6.3",
    "emotion-theming": "^11.0.0",
    "react-inlinesvg": "^4.1.0",
    "react-tooltip": "^5.26.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "storybook-dark-mode": "^3.0.1",
